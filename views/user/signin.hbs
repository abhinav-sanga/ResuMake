<div class="row authrow">
    <div class="col-md-4 col-md-offset-4">
        <h2 class="formhead">Sign In</h2>
        {{#if hasErrors}}
            <div class="alert alert-danger">
                <ul>
                    {{# each messages}}
                        <li>{{this}}</li>
                    {{/each}}
                </ul>
            </div>
        {{/if}}
        <form action="/user/signin" method="post" class="authforms">
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" id="email" name="email" class="form-control">
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" id="password" name="password" class="form-control">
            </div>
            <p class="frgtpwd"><a href="/user/forgot">Forgot Password?</a></p>
            <p class="frgtpwd">New user? <a href="/user/signup">Sign Up</a></p>
            <input type="hidden" name="_csrf" value="{{ csrfToken }}">
            <button type="submit" class="btn btn-primary">Sign In</button>
        </form>
    </div>
</div>